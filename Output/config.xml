				<module type="l" name="guiManager"/>
				<module type="l" name="titlescreen"/>
				<module/>
			</preset>
			<preset name="titleToGame" fadeOut="1" fadeIn="1">
				<module type="u" name="titlescreen"/>
				<module type="l" name="map"/>
				<module/>
			</preset>
			
		</presets>
	</reload>

